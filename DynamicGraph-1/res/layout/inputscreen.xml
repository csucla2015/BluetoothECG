<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<ImageView
			    android:id="@+id/imageView1"
			    android:layout_width="145dp"
			    android:layout_height="145dp"
			    android:layout_gravity="center"
			    android:src="@drawable/logoheart" />
<EditText
    android:id="@+id/editText1"
    android:layout_width="200dp"
    android:layout_height="35dp"
    android:layout_marginLeft="10dp"
    android:hint="Name"
    android:textSize="12dp" />

<EditText
    android:id="@+id/editText2"
    android:layout_width="200dp"
    android:layout_height="35dp"
    android:layout_marginLeft="10dp"
    android:hint="Age"
    android:inputType="number"
    android:textSize="12dp"  >
</EditText>

<EditText
    android:id="@+id/editText3"
    android:layout_width="200dp"
    android:layout_height="35dp"
    android:layout_marginLeft="10dp"
    android:hint="Doctor's Phone Number"
    android:inputType="number"
    android:textSize="12dp" > </EditText>

<EditText
    android:id="@+id/editText4"
    android:layout_width="200dp"
    android:layout_height="35dp"
    android:layout_marginLeft="10dp"
    android:hint="Closest Relative's Phone Number"
    android:inputType="number"
    android:textSize="12dp" >
</EditText>
<EditText
    android:id="@+id/editText5"
    android:layout_width="200dp"
    android:layout_height="35dp"
    android:layout_marginLeft="10dp"
    android:hint="Height(in feet eg 6.1 ft)"
    android:inputType="number"
    android:textSize="12dp"  >
</EditText>
<EditText
    android:id="@+id/editText6"
    android:layout_width="200dp"
    android:layout_height="35dp"
    android:layout_marginLeft="10dp"
    android:hint="Weight"
    android:inputType="number"
    android:textSize="12dp"  >
</EditText>
<EditText
    android:id="@+id/editText7"
    android:layout_width="200dp"
    android:layout_height="35dp"
    android:layout_marginLeft="10dp"
    android:hint="Ethnicity"
    android:textSize="12dp"  >
</EditText>
<EditText
    android:id="@+id/editText8"
    android:layout_width="200dp"
    android:layout_height="35dp"
    android:layout_marginLeft="10dp"
    android:hint="Previous"
    android:textSize="12dp"  >
</EditText>
<ImageButton
              android:id="@+id/submitbutton"
              android:layout_width="88dp"
              android:layout_height="34dp"
              android:layout_gravity="center|bottom"
              android:background="#00000000"
              android:scaleType="fitXY"
              android:src="@drawable/submit" />

<TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"/>
</LinearLayout>
</ScrollView>
