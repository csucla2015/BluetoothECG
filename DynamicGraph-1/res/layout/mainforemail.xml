<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"        
        android:layout_alignParentTop="true"
        android:src="@drawable/alert" />

    <TextView
        android:id="@+id/checkBox22"
        android:layout_width="420dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView1"
        android:gravity="center_vertical|center_horizontal|center"
        android:text="Abnormal Heartbeat"
        android:textSize="24dp" />
    
    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="420dp"
        android:layout_height="50dp"
        android:layout_below="@+id/checkBox22"
        
        android:layout_gravity="center"
        android:checked="true"
        android:text="Sent email to Dr. James Bruin"
        android:textSize="16dp" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="420dp"
        android:layout_height="50dp"
        android:layout_below="@+id/checkBox2"
        android:layout_gravity="center"
        android:checked="true"
        android:text="Sent text to Dr. James Bruin"
        android:textSize="16dp" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="420dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/checkBox1"
        android:layout_gravity="center"
        android:checked="true"
        android:text="Sent email to Relative : Joe Bruin"
        android:textSize="16dp" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="420dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/checkBox3"
        android:layout_gravity="center"
        android:checked="true"
        android:text="Sent text to Relative : Joe Bruin"
        android:textSize="16dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox4"
        android:layout_centerHorizontal="true"
        android:onClick="sending"
        android:text="Email" />

</RelativeLayout>